<div class="content">
  <div class="list">
    <h2>Questions</h2>

    <p class="add-new">
      <span class="fas fa-plus-circle"></span> <%= link_to 'New Question', new_question_path %>
    </p>

    <div class="questions">
      <% if @questions.length > 0 %>
        <% @questions.each do |question| %>
          <p class="question">
            <h4><%= link_to question.title, question %></h4>
          </p>
        <% end %>
      <% else %>
        <br><br><p class="text-center">No data available</p>
      <% end %>
    </div>

  </div>
</div>
