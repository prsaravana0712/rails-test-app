<div class="container">
  <p class="list-all">
    <span class="fas fa-th-list">
      <%= link_to 'Chats', chats_path %>
    </span>
  </p>

  <div class="new-chat">
    <h3>New Chat</h3>

    <% @chats.each do |chat| %>
      <p><%= chat.message %></p>
    <% end %>
    
    <div id="new_message"%></div>

    <%= render 'form', chat: @chat %>
  </div>
</div>
