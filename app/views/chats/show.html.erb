<div class="content">
  <p class="back">
    <span class="fas fa-arrow-circle-left">
      <%= link_to 'Back', chats_path %>
    </span>
  </p>

  <div class="show">
    <h3>Show Customer Details</h3>
    <p>
      <strong>Message:</strong>
      <%= @chat.message %>
    </p>

    <div class="form-group">
      <span class="fas fa-edit">
        <%= link_to 'Edit', edit_chat_path(@chat) %> |
      </span>

      <span class="fas fa-trash-alt">
        <%= link_to 'Delete', chat_path(@chat), method: :delete, data: { confirm: 'Are you sure?' } %>
      </span>
    </div>
  </div>
</div>
